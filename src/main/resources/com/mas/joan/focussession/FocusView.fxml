<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="488" prefWidth="369" spacing="10" style="-fx-background-color: #202130" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mas.joan.focussession.Controller.FocusController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <Label style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;" text="00:00" />

    <!-- Add padding below the HBox -->
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="NEVER" style="-fx-padding: 0 0 20 0;">
        <Button onAction="#handleStart" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;" text="Start" />
        <Button onAction="#handlePause" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;" text="Pause" />
        <Button onAction="#handleStop" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: #FFFFFF;" text="Stop" />
    </HBox>

    <!-- Decrease the width of the TableView -->
    <TableView fx:id="taskView" prefHeight="330.0" prefWidth="350.0">
        <columns>
            <TableColumn fx:id="dateRow" prefWidth="100" text="Date Created">
                <cellValueFactory>
                    <PropertyValueFactory property="start_time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="titleRow" prefWidth="100" text="Task">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionRow" prefWidth="140" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="timeRow" prefWidth="160" text="Time Elapsed">
                <cellValueFactory>
                    <PropertyValueFactory property="total_time" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</VBox>
