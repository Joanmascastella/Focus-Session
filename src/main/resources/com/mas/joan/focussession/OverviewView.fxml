<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="488" prefWidth="369" spacing="10" style="-fx-background-color: #202130" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mas.joan.focussession.Controller.OverviewController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <Label text="Closed Tasks" textFill="WHITE">
        <font>
            <Font size="20.0" />
        </font></Label>
    <HBox spacing="10">
        <Label text="Search:" textFill="WHITE" />
        <TextField fx:id="searchInput" promptText="Enter product" />
    </HBox>
    <TableView fx:id="taskView">
        <columns>
            <TableColumn fx:id="dateRow" prefWidth="100" text="Date Created">
                <cellValueFactory>
                    <PropertyValueFactory property="start_time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="titleRow" prefWidth="160" text="Task">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionRow" prefWidth="200" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="timeRow" prefWidth="100" text="Time Elapsed">
                <cellValueFactory>
                    <PropertyValueFactory property="total_time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusRow" prefWidth="160" text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
